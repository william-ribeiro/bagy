{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "docker:start": "docker-compose -f ./tools/bagy.yml up --force-recreate",
    "docker:stop": "docker-compose -f ./tools/bagy.yml down",
    "docker:migrate": "docker-compose -f tools/init.yml run --rm createMigration",
    "docker:revert-migration": "docker-compose -f tools/init.yml run --rm revertMigration",
    "start": "node dist/server.js",
    "build": "tsc",
    "start:server": "ts-node-dev --transpile-only --ignore-watch node_modules --respawn src/server.ts",
    "deploy": "git push -f heroku main",
    "typeorm": "ts-node-dev ./node_modules/typeorm/cli",
    "migration:run": "ts-node --transpile-only ./node_modules/typeorm/cli.js migration:run",
    "migration:revert": "ts-node --transpile-only ./node_modules/typeorm/cli.js migration:revert",
    "lint": "eslint --ext .tsx --ext .ts src/ --fix",
    "format": "prettier --check src/",
    "prettier": "npx @btmills/prettier --write"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/uuid": "^8.3.3",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "apollo-server": "^3.5.0",
    "apollo-server-core": "^3.5.0",
    "class-validator": "^0.13.2",
    "dotenv": "^10.0.0",
    "graphql": "^15.3.0",
    "knex": "^0.95.14",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.0.2",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.2.41",
    "uuid": "^8.3.2"
  }
}
